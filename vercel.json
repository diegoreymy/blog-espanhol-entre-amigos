{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/espanhol-entre-amigos/browser",
  "rewrites": [
    {
      "source": "/wp-content/uploads/(.*)",
      "destination": "https://espanholentreamigos596581947.wordpress.com/wp-content/uploads/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.ico"
    },
    {
      "source": "/(.*)",
      "destination": "/api/ssr.mjs"
    }
  ],
  "headers": [
    {
      "source": "/wp-content/uploads/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
